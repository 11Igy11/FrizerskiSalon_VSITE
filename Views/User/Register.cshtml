@model FrizerskiSalon_VSITE.Models.RegisterViewModel

<form method="post">
    <div class="form-group">
        <label for="Email">Email</label>
        <input asp-for="Email" class="form-control" id="Email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Password">Lozinka</label>
        <input asp-for="Password" type="password" class="form-control" id="Password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="ConfirmPassword">Potvrdi lozinku</label>
        <input asp-for="ConfirmPassword" type="password" class="form-control" id="ConfirmPassword" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Name">Ime i Prezime</label>
        <input asp-for="Name" class="form-control" id="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Phone">Telefon</label>
        <input asp-for="Phone" class="form-control" id="Phone" />
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Registriraj se</button>
</form>

<p>Već imate račun? <a href="/User/Login">Prijavi se</a></p>
