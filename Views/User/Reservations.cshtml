@model List<FrizerskiSalon_VSITE.Models.Reservation>

<h2>Moje rezervacije</h2>

<a class="btn btn-success mb-3" asp-action="CreateReservation">+ Nova rezervacija</a>

@if (Model != null && Model.Count == 0)
{
    <p>Nema zakazanih termina.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Datum</th>
                <th>Vrijeme</th>
                <th>Usluga</th>
                <th>Trajanje</th>
                <th>Cijena</th>
                <th>Akcije</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var reservation in Model)
            {
                <tr>
                    <td>@reservation.ReservationDate.ToString("dd.MM.yyyy")</td>
                    <td>@reservation.TimeSlot</td>
                    <td>@reservation.Service.Name</td>
                    <td>@reservation.Service.Description</td>
                    <td>@reservation.Service.Price.ToString("0.00") €</td>
                    <td>
                        <a class="btn btn-warning" asp-action="EditReservation" asp-route-id="@reservation.Id">Uredi</a>
                        <a class="btn btn-danger" asp-action="DeleteReservation" asp-route-id="@reservation.Id">Otkaži</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
