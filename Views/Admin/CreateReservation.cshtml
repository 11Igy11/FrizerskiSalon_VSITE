@model FrizerskiSalon_VSITE.Models.Reservation

<h2>Kreiraj novu rezervaciju</h2>

<form asp-action="CreateReservation" method="post">
    <div class="form-group">
        <label>Ime korisnika</label>
        <select asp-for="UserId" asp-items="ViewBag.Users" class="form-control">
            <option value="">Odaberi korisnika (ili ostavi prazno za admina)</option>
        </select>
        <span asp-validation-for="UserId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Usluga</label>
        <select asp-for="ServiceId" asp-items="ViewBag.Services" class="form-control">
            <option value="">-- Odaberi uslugu --</option>
        </select>

        <span asp-validation-for="ServiceId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Datum</label>
        <input asp-for="ReservationDate" type="date" class="form-control" required value="@DateTime.Now.ToString("yyyy-MM-dd")" />
        <span asp-validation-for="ReservationDate" class="text-danger"></span>
    </div>

        <button type="submit" class="btn btn-primary">Rezerviraj</button>
</form>



<a asp-action="Reservations" class="btn btn-secondary mt-3">Povratak na rezervacije</a>
