<h1>Dobrodošli u Admin Panel</h1>

<h2>Usluge</h2>
<a asp-action="Create" class="btn btn-primary">Dodaj novu uslugu</a>
<table class="table">
    <thead>
        <tr>
            <th>Naziv</th>
            <th>Cijena</th>
            <th>Opis</th>
            <th>Akcije</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var service in Model)
        {
            <tr>
                <td>@service.Name</td>
                <td>@service.Price</td>
                <td>@service.Description</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@service.Id" class="btn btn-warning">Uredi</a>
                    <a asp-action="Delete" asp-route-id="@service.Id" class="btn btn-danger">Obriši</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<h2>Rezervacije</h2>
<a asp-action="CreateReservation" class="btn btn-primary">Dodaj novu rezervaciju</a>
<a asp-action="Reservations" class="btn btn-secondary">Pogledaj sve rezervacije</a>
